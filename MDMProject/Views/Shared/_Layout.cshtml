@using MDMProject.Resources
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewResources.Layout__Title @(ViewBag.Title != null ? "- " + ViewBag.Title : "")</title>

    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    @Styles.Render("~/css/main")
    @RenderSection("styles", required: false)
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">@ViewResources.Layout__ToggleNavigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(ViewResources.Layout__MainPageLink, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right" id="partialView">
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()

    @Scripts.Render("~/scripts/main")
    @RenderSection("scripts", required: false)
</body>
</html>