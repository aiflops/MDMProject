@using MDMProject.Resources
@using MDMProject.ViewModels

@model RegisterViewModel
@{
    ViewBag.Title = ViewResources.Account_Register__Title;
}

<main class="login">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="form-container">
                    <h1 class="form-header mb-3">@ViewResources.Account_Register__Register</h1>
                    @using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-group", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="input-group mt-1">
                            @Html.LabelFor(m => m.Email)
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control mb-1" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger " })
                        </div>

                        <div class="input-group mt-1">
                            @Html.LabelFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control mb-1" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="input-group mt-1">
                            @Html.LabelFor(m => m.ConfirmPassword)
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control mb-1" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>

                        <div class="input-group mt-1">
                            @Html.CheckBoxFor(m => m.AcceptTerms)
                            @Html.LabelFor(m => m.AcceptTerms)
                            @Html.ActionLink(linkText: $"({ViewResources.Account_Register__Open})", actionName: "Rodo", controllerName: "Home", routeValues: null, htmlAttributes: new { target = "_blank" })

                            @Html.ValidationMessageFor(m => m.AcceptTerms, "", new { @class = "text-danger" })
                        </div>

                        <button type="submit" class="btn form-submit mt-3">@ViewResources.Account_Register__Register</button>
                    }
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/scripts/validation")
}
