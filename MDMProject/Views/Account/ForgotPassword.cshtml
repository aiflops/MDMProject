@using MDMProject.Resources
@using MDMProject.ViewModels

@model ForgotPasswordViewModel
@{
    ViewBag.Title = ViewResources.Account_ForgotPassword__Title;
}

<main class="login">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="form-container">
                    <h1 class="form-header mb-3">@ViewBag.Title</h1>
                    <p>@ViewResources.Account_ForgotPassword__ProvideEmailAndWeSendResetPassword</p>
                    <hr />

                    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-group", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="input-group mt-1">
                            @Html.LabelFor(m => m.Email)
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control mb-1", placeholder = ViewResources.Account_ForgotPassword__Placeholder })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger " })
                        </div>
                        <button type="submit" class="btn form-submit mt-3">@ViewResources.Account_ForgotPassword__Send</button>
                    }
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/scripts/validation")
}